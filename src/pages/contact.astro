---
import Layout from '../layouts/Layout.astro';

import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';

import background_video from '../content/background_video.mp4';
import logo from '../content/baja.png';
import vehicle_1 from '../content/vehicle_1.jpg';
import puglisevich from '../content/sponsors/puglisevich.jpeg';
import pegnl from '../content/sponsors/PEGNL.png';
import afonso from '../content/sponsors/afonso.jpeg';
---

<Layout>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@900&display=swap" rel="stylesheet">
	<main>
		<div class="object-cover w-full max-w-full min-h-[94vh] top-0 flex justify-center items-center border border-cyan-50">
			<ContactForm />
			<video
    			autoplay
   				loop
    			muted
				playsinline
    			class="object-cover absolute brightness-50 w-full min-h-screen max-w-full top-0"
  			>
				<source
      				src={background_video}
      				type="video/mp4"
    			/>
			</video>
		</div>
		<Footer />
	</main>
</Layout>
